{
    "private": true,
    "version": "0.0.0",
    "type": "module",
    "scripts": {
        "dev": "astro dev --host --port 3250",
        "format": "prettier -w .",
        "lint": "eslint",
        "lint-fix": "eslint --fix",
        "build": "astro build",
        "preview": "npm run build && astro preview"
    },
    "dependencies": {
        "@astrojs/node": "^6.0.0",
        "@astrojs/solid-js": "^3.0.0",
        "@kobalte/core": "^0.11.0",
        "@orama/orama": "^1.2.1",
        "astro": "^3.0.7",
        "astro-vercel-edge": "^1.0.1",
        "heroicons-astro": "^1.0.4",
        "solid-js": "^1.7.11"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^6.5.0",
        "@typescript-eslint/parser": "^6.5.0",
        "@unocss/eslint-config": "^0.55.6",
        "eslint": "^8.48.0",
        "eslint-plugin-astro": "^0.29.0",
        "eslint-plugin-react": "^7.33.2",
        "eslint-plugin-solid": "^0.13.0",
        "lightningcss": "^1.21.7",
        "prettier": "^3.0.3",
        "prettier-plugin-astro": "^0.12.0",
        "unocss": "^0.55.6"
    },
    "prettier": {
        "printWidth": 100,
        "tabWidth": 4,
        "singleQuote": false,
        "semi": false,
        "arrowParens": "avoid",
        "astroAllowShorthand": true,
        "plugins": [
            "prettier-plugin-astro"
        ],
        "overrides": [
            {
                "files": "*.astro",
                "options": {
                    "parser": "astro"
                }
            }
        ]
    }
}
